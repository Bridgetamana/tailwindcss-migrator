{
  "publisher": "Bridget",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bridgetamana/tailwindcss-migrator"
  },
  "bugs": {
    "url": "https://github.com/Bridgetamana/tailwindcss-migrator/issues"
  },
  "homepage": "https://github.com/Bridgetamana/tailwindcss-migrator",
  "license": "MIT",
  "icon": "images/icon.png",
  "keywords": [
    "vscode",
    "tailwind",
    "css",
    "migrator",
    "tailwindcss",
    "tailwindcss-migrator"
  ],
  "name": "tailwind-migrator",
  "displayName": "Tailwind CSS Version Migrator",
  "description": "Converts Tailwind CSS v3 syntax to v4 in Next.js projects",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:postcss"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts"
  },
  "contributes": {
    "commands": [
      {
        "command": "tailwind-migrator.convertFile",
        "title": "Tailwind: Convert to v4",
        "category": "Tailwind"
      },
      {
        "command": "tailwind-migrator.migrateWorkspace",
        "title": "Tailwind: Migrate Workspace to v4",
        "category": "Tailwind"
      }
    ],
    "configuration": {
      "title": "Tailwind Migrator",
      "properties": {
        "tailwindMigrator.autoConvert": {
          "type": "boolean",
          "default": false,
          "description": "Automatically convert Tailwind v3 to v4 on file save"
        },
        "tailwindMigrator.showDiff": {
          "type": "boolean",
          "default": true,
          "description": "Show diff before applying changes"
        },
        "tailwindMigrator.dryRun": {
          "type": "boolean",
          "default": false,
          "description": "Preview migration changes without modifying files"
        },
        "tailwindMigrator.customRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string"
              },
              "replacement": {
                "type": "string"
              }
            },
            "required": [
              "pattern",
              "replacement"
            ]
          },
          "default": [],
          "description": "Custom migration rules (regex pattern and replacement)"
        },
        "tailwindMigrator.includeGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["**/*.{css,pcss,postcss,scss,sass,less}"],
          "description": "Glob patterns to include when running workspace migration"
        },
        "tailwindMigrator.excludeGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["**/node_modules/**", "**/dist/**", "**/out/**"],
          "description": "Glob patterns to exclude during workspace migration"
        },
        "tailwindMigrator.preset": {
          "type": "string",
          "enum": ["generic", "nextjs", "vite", "astro", "sveltekit", "vue"],
          "default": "generic",
          "description": "Project preset that influences migration heuristics"
        },
        "tailwindMigrator.mode": {
          "type": "string",
          "enum": ["safe", "strict"],
          "default": "safe",
          "description": "Safe = conservative changes; Strict = apply all deterministic changes"
        },
        "tailwindMigrator.maxFileSizeKB": {
          "type": "number",
          "default": 1024,
          "minimum": 1,
          "description": "Skip files larger than this size (in KB) during migration"
        }
      }
    }
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.19",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vscode/test-electron": "^2.3.7",
    "eslint": "^9.33.0",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}
