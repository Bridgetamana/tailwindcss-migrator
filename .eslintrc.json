{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "env": {
    "node": true,
    "es2020": true
  },
  "ignorePatterns": ["dist/", "out/", "node_modules/"],
  "rules": {
    "semi": "warn",
    "curly": "warn",
    "eqeqeq": "warn"
  }
}
